= render partial: 'banners/banner_view', locals: { object: @banner }
= render partial: 'tasks/daily_list', locals: { objects: @tasks,
                                                date: Time.zone.now}
ul.nav.nav-tabs
  - @objects.each do |o|
    li.nav-item
      a.nav-link data-toggle="tab" href="##{o.class.name}" = o.class.name.capitalize 

.tab-content
  - @objects.each do |o|
    .tab-pane role="tabpanel" id="#{o.class.name.capitalize}"
      = render partial: 'shared/form', locals: {object: o, ajax: true}

- @objects.each do |o|
  .card
    .card-header
      = o.class.name
    .card-block
      canvas id="#{o.class.name.downcase}-chart"

